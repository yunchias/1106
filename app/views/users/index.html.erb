<h1>Listing users</h1>

<table>
  <tr>
    <th>Purpose</th>
    <th>Title</th>
    <th>First name</th>
    <th>Middle name</th>
    <th>Last name</th>
    <th>Street</th>
    <th>City</th>
    <th>State</th>
    <th>Country</th>
    <th>Zipcode</th>
    <th>Phone number</th>
    <th>Dob</th>
    <th>Email</th>
    <th>R email</th>
    <th>Username</th>
    <th>Password</th>
    <th>R password</th>
    <th>Secret q</th>
    <th>Secret a</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.purpose %></td>
    <td><%= user.title %></td>
    <td><%= user.first_name %></td>
    <td><%= user.middle_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.street %></td>
    <td><%= user.city %></td>
    <td><%= user.state %></td>
    <td><%= user.country %></td>
    <td><%= user.zipcode %></td>
    <td><%= user.phone_number %></td>
    <td><%= user.dob %></td>
    <td><%= user.email %></td>
    <td><%= user.r_email %></td>
    <td><%= user.username %></td>
    <td><%= user.password %></td>
    <td><%= user.r_password %></td>
    <td><%= user.secret_q %></td>
    <td><%= user.secret_a %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Delete', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

